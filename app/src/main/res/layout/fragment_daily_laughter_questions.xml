<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/quest_laughter_title"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/quest_laughter_a"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="61dp" />

        <ImageView
            android:id="@+id/icon_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_info_details" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_1a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/border_image"
            android:cropToPadding="true"
            android:padding="8dp"
            android:src="@drawable/icon_one" />


        <ImageView
            android:id="@+id/icon_1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/border_image"
            android:cropToPadding="true"
            android:padding="8dp"
            android:src="@drawable/icon_two" />

        <ImageView
            android:id="@+id/icon_1c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/border_image"
            android:cropToPadding="true"
            android:padding="8dp"
            android:src="@drawable/icon_three" />

        <ImageView
            android:id="@+id/icon_1d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/border_image"
            android:cropToPadding="true"
            android:padding="8dp"
            android:src="@drawable/icon_four" />

        <ImageView
            android:id="@+id/icon_1e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/border_image"
            android:cropToPadding="true"
            android:padding="8dp"
            android:src="@drawable/icon_five" />

    </LinearLayout>

    <Button
        android:id="@+id/score_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:text="@string/quest_button"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/icon_feedback"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left|top"
            android:layout_margin="2dp"
            android:background="@drawable/border_image_no_data"
            android:cropToPadding="true"
            android:padding="8dp"
            app:srcCompat="@drawable/icon_laughter"
            />

        <TextView
            android:id="@+id/text_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="8dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:visibility="invisible"
            />

    </LinearLayout>

</LinearLayout>
