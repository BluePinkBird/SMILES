<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical">

    <!-- First Question -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <!-- Question -->
        <TextView
            android:id="@+id/question_text_1"
            style="@style/BodyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quest_sleep_a"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="61dp" />

        <!-- Info Icon -->
        <ImageView
            android:id="@+id/icon_info_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_info_details" />
    </LinearLayout>

    <!-- Input Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_1a"
                android:layout_width="@dimen/input_icons_width"
                android:layout_height="@dimen/input_icons_height"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                android:layout_weight="1"
                android:background="@drawable/border_image"
                android:cropToPadding="true"
                android:padding="@dimen/input_icons_padding"
                android:src="@drawable/ic_less" />


            <ImageView
                android:id="@+id/icon_1b"
                android:layout_width="@dimen/input_icons_width"
                android:layout_height="@dimen/input_icons_height"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                android:layout_weight="1"
                android:background="@drawable/border_image"

                android:cropToPadding="true"
                android:padding="@dimen/input_icons_padding"
                android:src="@drawable/ic_4_5" />

            <ImageView
                android:id="@+id/icon_1c"
                android:layout_width="@dimen/input_icons_width"
                android:layout_height="@dimen/input_icons_height"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                android:layout_weight="1"
                android:background="@drawable/border_image"

                android:cropToPadding="true"
                android:padding="@dimen/input_icons_padding"
                android:src="@drawable/ic_6_9" />

            <ImageView
                android:id="@+id/icon_1d"
                android:layout_width="@dimen/input_icons_width"
                android:layout_height="@dimen/input_icons_height"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                android:layout_weight="1"
                android:background="@drawable/border_image"

                android:cropToPadding="true"
                android:padding="@dimen/input_icons_padding"
                android:src="@drawable/ic_more" />

        </LinearLayout>
    </LinearLayout>

    <!-- Second Question -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Question -->
        <TextView
            android:id="@+id/question_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quest_sleep_b"
style="@style/BodyText"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="61dp" />

        <!-- Info Icon -->
        <ImageView
            android:id="@+id/icon_info_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_info_details" />
    </LinearLayout>

    <!-- Input Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_image"
                    android:padding="8dp"
                    android:text="Anxiety"
                    android:textAlignment="center"
                    android:textColor="@color/colorBasicText"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_image"
                    android:padding="8dp"
                    android:text="Restlessness"
                    android:textAlignment="center"
                    android:textColor="@color/colorBasicText"
                    android:textSize="24dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/border_image"
                android:padding="8dp"
                android:text="School Commitments"
                android:textAlignment="center"
                android:textColor="@color/colorBasicText"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView8"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_image"
                    android:padding="8dp"
                    android:text="Shift Work"
                    android:textAlignment="center"
                    android:textColor="@color/colorBasicText"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_image"
                    android:padding="8dp"
                    android:text="Other"
                    android:textAlignment="center"
                    android:textColor="@color/colorBasicText"
                    android:textSize="24dp" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <!-- Score Button -->

    <Button
        android:id="@+id/score_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quest_button"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        />

    <!-- Score Display -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        >

        <!-- Icon
        <ImageView
            android:id="@+id/icon_feedback"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left|top"
            android:layout_margin="2dp"
            android:background="@drawable/border_image_no_data"
            android:cropToPadding="true"
            android:padding="8dp"
            app:srcCompat="@drawable/icon_sleep"
            />
 -->
        <!-- Score Text -->
        <TextView
            android:id="@+id/text_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="8dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>



</LinearLayout>