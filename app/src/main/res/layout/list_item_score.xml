<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/list_item_score_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            android:text="Date filler"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageView
                android:id="@+id/list_item_score_sleep"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="8dp"
                app:srcCompat="@drawable/icon_sleep" />

            <ImageView
                android:id="@+id/list_item_score_movement"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="8dp"
                app:srcCompat="@drawable/icon_movement" />

            <ImageView
                android:id="@+id/list_item_score_imagination"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="8dp"
                app:srcCompat="@drawable/icon_imagination" />

            <ImageView
                android:id="@+id/list_item_score_laughter"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="8dp"
                app:srcCompat="@drawable/icon_laughter" />

            <ImageView
                android:id="@+id/list_item_score_eating"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="8dp"
                app:srcCompat="@drawable/icon_eating" />

            <ImageView
                android:id="@+id/list_item_score_speaking"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="8dp"
                app:srcCompat="@drawable/icon_speaking" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>