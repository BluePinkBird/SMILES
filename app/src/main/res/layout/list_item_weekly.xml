<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@drawable/trim"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingTop="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/graph_weekly_score_date"
        style="@style/BodyTextNoMargin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:text="Feb 16th, 2019" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/graph_weekly_score_a"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/dot_image" />

        <ImageView
            android:id="@+id/graph_weekly_score_b"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/dot_image" />

        <ImageView
            android:id="@+id/graph_weekly_score_c"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/dot_image" />

        <ImageView
            android:id="@+id/graph_weekly_score_d"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/dot_image" />

        <ImageView
            android:id="@+id/graph_weekly_score_e"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/dot_image" />

        <ImageView
            android:id="@+id/graph_weekly_score_f"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/dot_image" />
    </LinearLayout>
</LinearLayout>

