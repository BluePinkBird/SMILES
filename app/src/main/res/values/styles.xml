<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BodyText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18dp</item>
        <item name="android:color">@color/colorPrimaryDark</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- For List Items -->
    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20dp</item>
        <item name="android:color">@color/colorPrimaryDark</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="SubtitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16dp</item>
        <item name="android:color">@color/colorPrimaryDark</item>
    </style>

</resources>
